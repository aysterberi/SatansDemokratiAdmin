<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.lisalesse.satansdemokratiadmin.MainActivity"
    android:orientation="horizontal"
    android:layout_weight="1">

    <TextView
        android:id="@+id/rubrik"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textAlignment="center"
        android:text="ADMIN"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"/>

    <TextView
        android:background="@drawable/back"
        android:id="@+id/antal"
        android:layout_below="@+id/rubrik"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="2dp"
        android:text="Antal: "
        android:textColor="@color/colorPrimaryDark"/>

    <CheckBox
        android:id="@+id/checkalla"
        android:text="alla"
        android:layout_below="@+id/antal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:background="@drawable/back"
        android:padding="5dp"
        android:id="@+id/messagebox"
        android:layout_below="@+id/checkalla"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="2dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Skriv nÃ¥got"/>

    <LinearLayout
        android:layout_below="@id/messagebox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2">

        <Button
            android:id="@+id/button_skicka"
            android:layout_below="@+id/messagebox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Skicka"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/button_rensa"
            android:layout_below="@+id/messagebox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Rensa"
            android:layout_weight="1"/>


    </LinearLayout>



</RelativeLayout>
